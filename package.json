{
  "name": "esw-ocs-eng-ui",
  "author": "TMT",
  "version": "0.0.1",
  "license": "Apache License, Version 2.0",
  "type": "module",
  "dependencies": {
    "@tmtsoftware/esw-ts": "git+https://github.com/tmtsoftware/esw-ts",
    "antd": "^4.13.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-error-boundary": "^3.1.1",
    "react-query": "^3.12.0",
    "react-router-dom": "^5.2.0"
  },
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "build:reporter": "tsc --p tsconfig.test.json",
    "test:unit": "web-test-runner 'test/**/*.unit.test.{ts,tsx}'",
    "test:unit:watch": "export LOGS=true && npm run test:unit -- --watch",
    "test:reporter": "npm run test:unit -- --config wtr-rtm.config.js --coverage",
    "test:ci": "npm-run-all build:reporter test:reporter",
    "test": "npm run test:unit",
    "test:logsEnabled": "export LOGS=true && npm run test:unit",
    "clean": "rm -rf dist && mkdir dist",
    "prebuild": "npm-run-all --parallel clean eslint:check audit",
    "eslint:check": "eslint --config .eslintrc.json './{src,test}/**/*.{ts,tsx}'",
    "fix": "npm-run-all --parallel clean fix:eslint fix:prettier",
    "fix:eslint": "eslint --fix --config .eslintrc.json './**/*.{ts,tsx}'",
    "fix:prettier": "prettier --write --config ./.prettierrc './**/*.{ts,tsx}' ",
    "audit": "npm audit"
  },
  "browserslist": [
    "last 1 chrome version"
  ],
  "devDependencies": {
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/web-test-runner-plugin": "^0.2.1",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.0",
    "@testing-library/user-event": "^12.8.1",
    "@types/chai": "^4.2.15",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@web/test-runner": "^0.12.15",
    "chai": "^4.3.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "keycloak-js": "^12.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "snowpack": "^3.0.13",
    "ts-mockito": "^2.6.1",
    "typescript": "^4.2.2"
  }
}
