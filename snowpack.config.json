{
  "buildOptions": {
    "clean": true,
    "sourceMap": true
  },
  "testOptions": { "files": ["**/test/**/*.*"] },
  "mount": {
    "public": "/",
    "src": "/_dist_",
    "test": "/dist_test"
  },

  "plugins": [["@snowpack/plugin-typescript"]],
  "packageOptions": {
    "polyfillNode": true,
    "external": ["fs", "os", "path"]
  },
  "routes": [{ "match": "routes", "src": ".*", "dest": "/index.html" }]
}
